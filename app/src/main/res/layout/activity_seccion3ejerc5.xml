<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoPantalla"
    android:orientation="horizontal"
    android:padding="3dp"
    tools:context=".Seccion3Ejerc5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textoSeccion3Ejerc5Titulo"
            style="@style/boton.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/seccion3Ejerc5Titulo"
            android:textSize="@dimen/textSizeTituloCapitulos"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include
                layout="@layout/tablero_sin_avatar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"></include>

            <LinearLayout
                android:id="@+id/piezas"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="visible">

                <Spinner
                    android:layout_width="match_parent"
                    android:background="@color/botonFondo2"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:entries="@array/Columnas"
                    android:id="@+id/spnColumnas_s3e5"
                    android:spinnerMode="dropdown">
                </Spinner>

                <Spinner
                    android:id="@+id/spnFilas_s3e5"
                    android:layout_margin="5dp"
                    android:background="@color/botonFondo2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:entries="@array/Filas"
                    android:spinnerMode="dropdown">
                </Spinner>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>